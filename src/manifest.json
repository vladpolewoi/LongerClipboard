{
  "manifest_version": 2,
  "name": "LongerClipboard",
  "homepage_url": "http://localhost:8080/",
  "description": "Long live the clipboard",
  "default_locale": "en",
  "permissions": [
    "activeTab",
    "<all_urls>",
    "*://*/*",
    "commands",
    "declarativeContent",
    "notifications",
    "contextMenus",
    "tabs",
    "storage"
  ],
  "commands": {
    "save_handler": {
      "suggested_key": {
        "default": "Alt+Shift+Z"
      },
      "description": "Save to google sheets"
    }
  },
  "icons": {
    "16": "icons/logo.png",
    "48": "icons/logo.png",
    "128": "icons/logo.png"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "__MSG_extName__",
    "default_icon": {
      "19": "icons/logo.png",
      "38": "icons/logo.png"
    }
  },
  "options_ui": {
    "page": "options.html"
  }
}
